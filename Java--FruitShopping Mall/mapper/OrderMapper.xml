<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.work.chinafoodstore.mapper.OrderMapper">

    <select id="findOrderByFoodId" resultType="com.work.chinafoodstore.dommain.Order">
        select * from food_order where food_id=#{foodId}
    </select>

    <select id="findOrderByUid" resultType="com.work.chinafoodstore.dommain.Order">
        select * from food_order where user_id=#{uid}
    </select>

</mapper>