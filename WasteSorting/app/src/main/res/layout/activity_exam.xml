<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:padding="3dp"
            android:src="@drawable/finish" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="每日一测"
            android:textColor="#b1102d"
            android:textSize="35dp" />


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="每道题都只有一个正确选项"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_timu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="25sp" />

    <RadioGroup
        android:id="@+id/select1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/select1_1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="A  可回收物"
            android:textSize="20sp"
            android:textColor="#3e79ef"/>

        <RadioButton
            android:id="@+id/select1_1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="B  干垃圾"
            android:textSize="20sp"
            android:textColor="#1d2a44"/>

        <RadioButton
            android:id="@+id/select1_1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="C  有害垃圾"
            android:textSize="20sp"
            android:textColor="#8B0A50"/>

        <RadioButton
            android:id="@+id/select1_1_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="D  湿垃圾"
            android:textSize="20sp"
            android:textColor="#91ef8a"/>

    </RadioGroup>

    <TextView
        android:id="@+id/btn_sub1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="提交答案"
        android:textColor="@color/black"
        android:background="@drawable/setbar_bg"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

</LinearLayout>